<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/segment_view_uisettings">

    <Button
        android:id="@+id/segmentLeaderboardBtn"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:text="Get Segment # Leaderboard"
        android:backgroundTint="@color/cold_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/segmentLeaderboardBtn"/>


</RelativeLayout>