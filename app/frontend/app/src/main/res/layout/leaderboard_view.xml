<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/leaderboard_view_uisettings"
    android:layout_margin="5dp">
    <FrameLayout
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/starFrame">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/itemImage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_star_24"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/userPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="15sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_toEndOf="@id/starFrame"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="User Name:"
        android:layout_centerVertical="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userTime"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="User Time:"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/userTime"
        />

</RelativeLayout>